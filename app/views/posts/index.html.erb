<div class="row">
<div class="col-md-12 col-md-6 col-sm-6">
<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
<%= link_to "New", new_post_path, :class => "btn btn-primary"  %>
</div>
</div>
<br>
<div class="row">
  <% @posts.reverse.each do |p| %>
  <div class="col-md-12 col-md-6 col-sm-6">
  <div class="panel panel-default">
    
      <div class="panel-heading">
        <h2><%= link_to p.title , p %></h2>
      </div>
      <div class="panel-body">
        <i>Created At : <%= p.created_at %></i>
        <br><br>
        <p><%= p.content.truncate(200) %></p>
        <% if p.content.length > 200%>
        <%= link_to 'Read More', p %>
        <% end %>
      </div>
    
    
    
  </div>
  </div>
  <% end %>
</div>
